---
import { Menu } from '@nl-design-system-community/ma-components/local/menu/index.tsx';
import { getCollection, render } from 'astro:content';
import menuItems from '../../../.config/menu.json';
import { markActiveMenuItems } from '../../utils/mark-active-menu-items.ts';

const menuItemsWithActiveMarks = markActiveMenuItems(menuItems, Astro.url);

// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const onderzoeken = await getCollection('onderzoeken');
  return onderzoeken.map((onderzoek) => ({
    params: { id: onderzoek.id },
    props: { onderzoek },
  }));
}

// 2. For your template, you can get the entry directly from the prop
const { onderzoek } = Astro.props;
const { Content } = await render(onderzoek);
---

<Menu items={menuItemsWithActiveMarks} />

<Content />
