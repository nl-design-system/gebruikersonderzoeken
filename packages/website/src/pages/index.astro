---
import { Heading } from '@nl-design-system-candidate/heading-react';
import { Paragraph } from '@nl-design-system-candidate/paragraph-react';
import { Menu } from '@nl-design-system-community/ma-components/local/menu/index.tsx';
import { Panel } from '@nl-design-system-community/ma-components/local/panel/index.tsx';
import '@assets/styles.css';
import menuItems from '../../.config/menu.json';
import { markActiveMenuItems } from '../utils/mark-active-menu-items.ts';

const menuItemsWithActiveMarks = markActiveMenuItems(menuItems, Astro.url);
---

<html lang="en" class="ma-theme">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <Menu items={menuItemsWithActiveMarks} />

    <Panel spaceBlock="6xl">
      <hgroup class="utrecht-heading-group">
        <Heading level={1}>Gebruikersonderzoek</Heading>
        <Paragraph>Door gebruikersonderzoek met elkaar te delen worden we allemaal slimmer.</Paragraph>
      </hgroup>
    </Panel>

    <Panel spaceBlock="5xl">
      <div>Card 1</div>
      <div>Card 2</div>
      <div>Card 3</div>
      <div>Card 4</div>
    </Panel>
  </body>
</html>
