{
  "extends": ["astro/tsconfigs/strict", "@nl-design-system/tsconfig"],
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@schemas/*": ["src/schemas/*"]
    },
    "plugins": [{ "name": "@astrojs/ts-plugin" }],
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true
  }
}
